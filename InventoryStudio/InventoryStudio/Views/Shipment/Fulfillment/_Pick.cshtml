@model FulfillmentDetailViewModel


<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    @*<form asp-action="Create" method="post" id="createItemForm">*@
        <div class="card">
            <div class="card-body">
                <div class="tab-content">
                    <!-- Step 1 -->
                    <div class="tab-pane fade show active" id="step1" role="tabpanel" aria-labelledby="item-details-tab">

                     

                        @for (int i = 0; i < Model.Fulfillment.FulfillmentLines.Count; i++)
                        {
                            var fulfillmentLine = Model.Fulfillment.FulfillmentLines[i];
                            <div class="row">
                                <div class="form-group col-md-3">
                                    <label>Item</label>
                                    <input asp-for="@fulfillmentLine.ItemID" type="text" class="form-control" name="fulfillmentLine[@i].ItemID">
                                </div>
                                <div class="form-group col-md-3">
                                    <label>Quantity</label>
                                    <input asp-for="@fulfillmentLine.Quantity" type="text" class="form-control" name="fulfillmentLine[@i].Quantity">
                                </div>
                                <div class="form-group col-md-3">
                                    <label>Location</label>
                                    <input asp-for="@fulfillmentLine.LocationID" type="text" class="form-control" name="fulfillmentLine[@i].LocationID">
                                </div>
                                <div class="form-group col-md-3">
                                    <label>ItemUnitID</label>
                                    <input asp-for="@fulfillmentLine.ItemUnitID" type="text" class="form-control" name="fulfillmentLine[@i].ItemUnitID">
                                </div>
                            </div>
                            @for (int j = 0; j < fulfillmentLine.FulfillmentLineDetails.Count; j++)
                            {
                                var fulfillmentLineDetail = fulfillmentLine.FulfillmentLineDetails[j];
                                <div class="row">
                                    <div class="form-group col-md-3">
                                        <label>Bin</label>
                                        <input asp-for="@fulfillmentLineDetail.BinID" type="text" class="form-control" name="fulfillmentLine[@i].fulfillmentLineDetail[@j].BinID">
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label>Quantity</label>
                                        <input asp-for="@fulfillmentLineDetail.Quantity" type="text" class="form-control" name="fulfillmentLine[@i].fulfillmentLineDetail[@j].Quantity">
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label>InventoryNumber</label>
                                        <input asp-for="@fulfillmentLineDetail.InventoryNumber" type="text" class="form-control" name="fulfillmentLine[@i].fulfillmentLineDetail[@j].InventoryNumber">
                                    </div>
                                    <div class="form-group col-md-3">
                                        <input asp-for="@fulfillmentLineDetail.InventoryDetailID" type="hidden" class="form-control" name="fulfillmentLine[@i].fulfillmentLineDetail[@j].InventoryDetailID">
                                    </div>
                                </div>
                            }
                        }



                    </div>


                </div>
            </div>
        </div>

     
    @*</form>*@
</div>

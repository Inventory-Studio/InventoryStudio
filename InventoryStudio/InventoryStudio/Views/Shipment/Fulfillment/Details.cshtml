@model FulfillmentDetailViewModel

@{
    ViewData["Title"] = "Fulfillment";

}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    <div class="row">

        <div class="col-md-12 text-right">
            @if (Model.Fulfillment.Status == Convert.ToString(Fulfillment.enumFulfillmentStatus.Pending))
            {
                <a class="btn btn-primary" href="@Url.Action("PickUp", "Fulfillment", new { id = Model.Fulfillment.FulfillmentID })">Pick Up</a>
            }
            @if (Model.Fulfillment.Status == Convert.ToString(Fulfillment.enumFulfillmentStatus.PickedUp))
            {
                <a class="btn btn-primary" href="@Url.Action("Pick", "Fulfillment", new { id = Model.Fulfillment.FulfillmentID })">Pick</a>
            }
            @if (Model.Fulfillment.Status == Convert.ToString(Fulfillment.enumFulfillmentStatus.Picked))
            {
                <a class="btn btn-primary" href="@Url.Action("Ship", "Fulfillment", new { id = Model.Fulfillment.FulfillmentID })">Ship</a>
            }
        </div>
    </div>
    <div class="row">
        <div class="d-flex flex-column col-md-4">
            <label class="form-label">@Html.DisplayNameFor(model => model.Fulfillment.Status)</label>
            <p>@Model.Fulfillment.Status</p>
        </div>
          <div class="d-flex flex-column col-md-4">
            <label class="form-label">@Html.DisplayNameFor(model => model.Fulfillment.TranDate)</label>
            <p>@Model.Fulfillment.TranDate</p>
        </div>
              <div class="d-flex flex-column col-md-4">
            <label class="form-label">@Html.DisplayNameFor(model => model.Fulfillment.PrintedBy)</label>
            <p>@Model.Fulfillment.PrintedBy</p>
        </div>
              <div class="d-flex flex-column col-md-4">
            <label class="form-label">@Html.DisplayNameFor(model => model.Fulfillment.PickedUpBy)</label>
            <p>@Model.Fulfillment.PickedUpBy</p>
        </div>
              <div class="d-flex flex-column col-md-4">
            <label class="form-label">@Html.DisplayNameFor(model => model.Fulfillment.PickedBy)</label>
            <p>@Model.Fulfillment.PickedBy</p>
        </div>
              <div class="d-flex flex-column col-md-4">
            <label class="form-label">@Html.DisplayNameFor(model => model.Fulfillment.PackedBy)</label>
            <p>@Model.Fulfillment.PackedBy</p>
        </div>
                    <div class="d-flex flex-column col-md-4">
            <label class="form-label">@Html.DisplayNameFor(model => model.Fulfillment.ShippedBy)</label>
            <p>@Model.Fulfillment.ShippedBy</p>
        </div>
  
       

    </div>

    @if (Model.Fulfillment.Status == Convert.ToString(Fulfillment.enumFulfillmentStatus.PickedUp))
    {
        @await Html.PartialAsync("~/Views/Shipment/Fulfillment/_Pick.cshtml", Model)
    }


    @if (Model.Fulfillment.Status == Convert.ToString(Fulfillment.enumFulfillmentStatus.Picked))
    {
        @await Html.PartialAsync("~/Views/Shipment/Fulfillment/_Ship.cshtml", Model)
    }
    
</div>





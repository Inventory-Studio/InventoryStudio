@model List<Company>

<h2>All Companies for User</h2>

@if (Model.Any())
{
    <ul>
        @foreach (var company in Model)
        {
            <li>
                @company.CompanyName
                <form asp-action="SwitchCompany" asp-controller="Account" method="post" style="display: inline-block;">
                    <input type="hidden" name="companyId" value="@company.CompanyID" />
                    <button type="submit">Switch</button>
                </form>
            </li>
        }
    </ul>
}
else
{
    <p>No organizations found for the user.</p>
}

@model AssignPermissionsViewModel

<h1>Assign Permissions to Role</h1>

<h3>Role: @Model.RoleName</h3>

<form asp-action="AssignPermissions" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="RoleId" value="@Model.RoleId" />
        <label>Select Permissions</label>

        @foreach (var permission in Model.Permissions)
        {
            var isChecked = Model.AssignPermissions.Contains(permission.PermissionId);
            <div class="form-check">
                    <input type="checkbox" id="permission-@permission.PermissionId" name="SelectedPermissionIds" value="@permission.PermissionId" @(isChecked ? "checked" : "") />
                <label for="permission-@permission.PermissionId">@permission.Name</label>
            </div>
        }
    </div>
    <div class="form-group">
        <input type="submit" value="Assign Permissions" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index">Back to List</a>

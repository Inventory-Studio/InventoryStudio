@model List<Role>

<h1>Roles</h1>

<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@role.Id">Delete</a> |
                    <a asp-action="AssignPermissions" asp-route-id="@role.Id">Assign Permissions</a> |
                    <a asp-action="AssignRoleToUser" asp-route-roleId="@role.Id">Assign Users</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create New Role</a>

@model AdjustmentViewModel

@{
    ViewData["Title"] = "Create Adjustment";

}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="Create" method="post" id="createItemForm">
        <div class="card">       
            <div class="card-body">
                <div class="tab-content">
                    <!-- Step 1 -->
                    <div class="tab-pane fade show active" id="step1" role="tabpanel" aria-labelledby="item-details-tab">
                                             
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label asp-for="Memo">Memo</label>
                                <input asp-for="Memo" class="form-control" />
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="LocationID">Location</label>
                                <input asp-for="LocationID" class="form-control" />
                            </div>
                        </div>

                        <table class="table" id="itemKitTable">
                            <thead>
                                <tr>
                                    <th>Item Name</th>
                                    <th>Quantity</th>
                                    <th>Location</th>
                                    <th>ItemUnitID</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var AdjustmentLine in Model.AdjustmentLines)
                                    {                                        
                                        <tr>
                                            <td>
                                            @AdjustmentLine.ItemID
                                                
                                            </td>
                                            <td>
                                            @AdjustmentLine.Quantity
                                            </td>
                                            <td>@AdjustmentLine.LocationID</td>
                                            <td>
                                             @AdjustmentLine.ItemUnitID
                                            </td>
                                        </tr>
                                    @foreach (var AdjustmentLineDetail in AdjustmentLine.AdjustmentLineDetails){
                                            <tr>
                                                <td> Bin:
                                                        @AdjustmentLineDetail.BinID

                                                </td>
                                                <td>
                                                        @AdjustmentLineDetail.Quantity
                                                </td>
                                                    <td>@AdjustmentLineDetail.InventoryNumber</td>
                                                <td>
                                                        @AdjustmentLineDetail.ItemUnitID
                                                </td>
                                            </tr>
                                    }
                                    }
                                
                               
                            </tbody>
                        </table>
                       
                    </div>
                  
                    
                </div>
            </div>
        </div>

        <!-- Navigation Buttons -->
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </form>
</div>







@{
    ViewData["Title"] = "Unit of Measures";
}

<div class="container-fluid py-4 h-100">
    <div class="card custom-card h-100">
        <div class="card-header hstack align-items-center justify-content-between">
            <div class="card-title">
                Unit of Measures
            </div>
            <div class="btn-list mt-md-0 mt-2">
                <a asp-controller="ItemUnit" asp-action="Create" type="button" class="btn btn-sm btn-primary btn-wave hstack align-items-center" aria-label="Create ItemUnit button">
                    <i class="bi-plus me-2 align-middle d-inline-block fs-16"></i>Add
                </a>
            </div>
        </div>
        <div class="card-body">
            <ejs-grid id="Grid" class="h-100" allowPaging="true" allowReordering="true" allowSorting="true" toolbarClick="toolbarClick" allowSelection="true" allowFiltering="true" enableStickyHeader="true" width="100%" height="100%"
                      allowExcelExport="true" allowPdfExport="true" toolbar="@(new List<string>() { "Delete", "PdfExport", "ExcelExport" })">

                <e-grid-editSettings showDeleteConfirmDialog="true" allowDeleting="true">
                </e-grid-editSettings>
                <e-grid-filterSettings type="Excel" mode="OnEnter"></e-grid-filterSettings>
                <e-data-manager url="/ItemUnit/UrlDatasource" adaptor="UrlAdaptor" insertUrl="/ItemUnit/Insert"
                                updateUrl="/ItemUnit/Edit" removeUrl="/ItemUnit/Remove">
                </e-data-manager>
                @* <e-grid-pagesettings pageCount="5"></e-grid-pagesettings> *@
                <e-grid-columns>
                    <e-grid-column field="ItemUnitTypeID" headerText="ItemUnitTypeID" type="int" isPrimaryKey="true"
                                   validationRules="@(new { number = true })" width="80">
                    </e-grid-column>
                    <e-grid-column field="Name" headerText="Name" type="datetime" format="M/d/yyyy h:mm a" width="120"></e-grid-column>
                    <e-grid-column field="CreatedOn" headerText="CreatedOn" width="120"></e-grid-column>
                    <e-grid-column headerText="Actions" template="#actions" width="100" maxWidth="100"></e-grid-column>
                </e-grid-columns>
            </ejs-grid>
        </div>
    </div>
</div>

<!-- Actions template -->
<script id="actions" type="text/x-template">
    <div class="hstack gap-2">
         <a href="/ItemUnit/Details?id=${ItemUnitTypeID}" class="btn btn-icon btn-info-light" data-bs-toggle="tooltip" title="View Item Unit" aria-label="View Item Unit">
            <i class="bi-eye-fill"></i>
        </a>
    </div>
</script>


<script src="@Url.Content("~/js/utils/utils.js")"></script>

<!-- Javascript logic for datagrid -->
<script lang="js">
    const toolbarClick = customExportToolbarClick("Grid", "IS_Roles");
</script>

@section Scripts {
    <script>
        function confirmDelete(name) {
            return confirm(`Are you sure you want to delete the unit '${name}'?`);
        }
    </script>
}
@model TransferViewModel

@{
    ViewData["Title"] = "Create Transfer";

}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="Create" method="post" id="createItemForm">
        <div class="card">       
            <div class="card-body">
                <div class="tab-content">
                    <!-- Step 1 -->
                    <div class="tab-pane fade show active" id="step1" role="tabpanel" aria-labelledby="item-details-tab">
                                             
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label asp-for="Memo">Memo</label>
                                <input asp-for="Memo" class="form-control" />
                            </div>

                        </div>

                        <table class="table" id="itemKitTable">
                            <thead>
                                <tr>
                                    <th>Item Name</th>
                                    <th>Quantity</th>
                                    <th>FromLocation</th>
                                    <th>ToLocation</th>
                                    <th>ItemUnitID</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var TransferLine in Model.TransferLines)
                                    {                                        
                                        <tr>
                                            <td>
                                            @TransferLine.ItemID
                                                
                                            </td>
                                            <td>
                                            @TransferLine.Quantity
                                            </td>
                                        <td>@TransferLine.FromLocationID</td>
                                        <td>@TransferLine.ToLocationID</td>
                                            <td>
                                            @TransferLine.ItemUnitID
                                            </td>
                                        </tr>
                                    @foreach (var TransferLineDetail in TransferLine.TransferLineDetails)
                                    {
                                            <tr>
                                                <td> FromBin:
                                                @TransferLineDetail.FromBinID

                                                </td>
                                                <td> ToBin:
                                                @TransferLineDetail.ToBinID

                                                </td>
                                                <td>
                                                @TransferLineDetail.Quantity
                                                </td>
                                            <td>@TransferLineDetail.InventoryNumber</td>
                                                <td>
                                                @TransferLineDetail.ItemUnitID
                                                </td>
                                            </tr>
                                    }
                                    }
                                
                               
                            </tbody>
                        </table>
                       
                    </div>
                  
                    
                </div>
            </div>
        </div>

        <!-- Navigation Buttons -->
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </form>
</div>





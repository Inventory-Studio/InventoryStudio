@model List<Company>

@{
    ViewData["Title"] = "Company";
    var normalizedBoolean = "normalizedBooleanFn";
}


<div class="container-fluid py-4 h-100">
    <div class="card custom-card h-100">
        <div class="card-header hstack align-items-center justify-content-between">
            <div class="card-title">
                Company Management
            </div>
            <div class="hstack btn-list mt-md-0 mt-2">
                <a asp-controller="Company" asp-action="Create" type="button" class="btn btn-sm btn-primary btn-wave hstack align-items-center" aria-label="Create company button">
                    <i class="bi-plus me-2 align-middle d-inline-block fs-16"></i>Create Company
                </a>
            </div>
        </div>
        <div class="card-body">
            <ejs-grid id="Grid" class="h-100" allowPaging="true" allowReordering="true" allowSorting="true" toolbarClick="toolbarClick" allowSelection="true" allowFiltering="true" enableStickyHeader="true" width="100%" height="100%"
                      allowExcelExport="true" allowPdfExport="true" toolbar="@(new List<string>() { "Delete", "PdfExport", "ExcelExport" })">

                <e-grid-editSettings showDeleteConfirmDialog="true" allowDeleting="true">
                </e-grid-editSettings>
                <e-grid-filterSettings type="Excel" mode="OnEnter"></e-grid-filterSettings>
                <e-data-manager url="/Company/UrlDatasource" adaptor="UrlAdaptor" insertUrl="/Company/Insert"
                                updateUrl="/Company/Update" removeUrl="/Company/Remove">
                </e-data-manager>
                @* <e-grid-pagesettings pageCount="5"></e-grid-pagesettings> *@
                <e-grid-columns>
                    <e-grid-column visible="false" field="CompanyID" headerText="ID" type="int" isPrimaryKey="true"
                                   validationRules="@(new { number = true })" width="80">
                    </e-grid-column>
                    <e-grid-column field="CompanyName" headerText="Company Name" width="120"></e-grid-column>
                    <e-grid-column field="AutomateFulfillment" headerText="Automate Fulfillment" valueAccessor="normalizedBoolean" width="120"></e-grid-column>
                    <e-grid-column field="ShippoAPIKey" headerText="Shippo API Key" width="120"></e-grid-column>
                    <e-grid-column field="IncludePackingSlipOnLabel" headerText="Include Packing Slip" valueAccessor="normalizedBoolean" width="120"></e-grid-column>
                    <e-grid-column field="DefaultFulfillmentMethod" headerText="Default Fulfillment Method" width="120"></e-grid-column>
                    <e-grid-column field="DefaultFulfillmentStrategy" headerText="Default Fulfillment Strategy" width="120"></e-grid-column>
                    <e-grid-column field="DefaultAllocationStrategy" headerText="Default Allocation Strategy" width="120"></e-grid-column>
                    <e-grid-column headerText="Actions" template="#actions" width="100" maxWidth="100"></e-grid-column>
                </e-grid-columns>
            </ejs-grid>
        </div>
    </div>
</div>

<!-- Actions template -->
<script id="actions" type="text/x-template">
    <div class="hstack gap-2">
        <a href="/Company/Edit?id=${CompanyID}" class="btn btn-icon btn-warning-light" data-bs-toggle="tooltip" title="Edit user" aria-label="Edit user button">
            <i class="bi-pencil-fill"></i>
        </a>
        <a href="/Company/Details?id=${CompanyID}" class="btn btn-icon btn-info-light" data-bs-toggle="tooltip" title="View user" aria-label="View user button">
            <i class="bi-eye-fill"></i>
        </a>
    </div>
</script>


<!-- Javascript logic for datagrid -->
<script lang="js">

    function normalizedBooleanFn(field, data, column) {
        var value = data[field];
        if (value) {
            return "Yes";
        }
        return "No";
    }

    function toolbarClick(args) {
        var gridObj = document.getElementById("Grid").ej2_instances[0];
        if (args.item.id === 'Grid_pdfexport') {
            var pdfdata = gridObj.getSelectedRecords();
            if (pdfdata?.length > 0) {
                var exportProperties = {
                    dataSource: pdfdata,
                    includeHiddenColumn: true,
                    fileName: "IS_Companies.pdf"
                };
                gridObj.pdfExport(exportProperties);
            } else {
                gridObj.pdfExport({
                    fileName: "IS_Companies.pdf"
                });
            }
        }
        if (args.item.id === 'Grid_excelexport') {
            var exceldata = gridObj.getSelectedRecords();
            if (exceldata?.length > 0) {
                var exportProperties = {
                    dataSource: exceldata,
                    includeHiddenColumn: true,
                    fileName: "IS_Companies.xlsx"
                };
                gridObj.excelExport(exportProperties);
            } else {
                gridObj.excelExport({
                    fileName: "IS_Companies.xlsx"
                });
            }

        }
    }
</script>
@model Company

@{
    ViewData["Title"] = "Company-Details";

    string NormalizedBoolean(bool value)
    {
        return value ? "Yes" : "No";
    }
}

<div class="container-fluid py-4">
    <div class="card custom-card">
        <div class="card-header hstack justify-content-between align-items-center">
            <div class="card-title">Company Details</div>
            <div class="hstack btn-list mt-md-0 mt-2">
                <a asp-controller="Company" asp-action="Edit" asp-route-id="@Model.CompanyID" type="button" class="btn btn-sm btn-primary btn-wave hstack align-items-center" aria-label="Edit company button">
                    <i class="bi-pencil-fill me-2 align-middle d-inline-block fs-16"></i>Edit Company
                </a>
                <a asp-controller="Company" asp-action="Index" type="button" class="btn btn-sm btn-light btn-wave hstack align-items-center" aria-label="back to list button">
                    Back to List
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="d-flex flex-column col-md-4">
                    <label class="form-label">@Html.DisplayNameFor(model => model.CompanyName)</label>
                    <p>@Model.CompanyName</p>
                </div>

                <div class="d-flex flex-column col-md-4">
                    <label class="form-label">@Html.DisplayNameFor(model => model.AutomateFulfillment)</label>
                    <p>@NormalizedBoolean(Model.AutomateFulfillment)</p>
                </div>

                <div class="d-flex flex-column col-md-4">
                    <label class="form-label">@Html.DisplayNameFor(model => model.ShippoAPIKey)</label>
                    <p>@Model.ShippoAPIKey</p>
                </div>

                <div class="d-flex flex-column col-md-4">
                    <label class="form-label">@Html.DisplayNameFor(model => model.IncludePackingSlipOnLabel)</label>
                    <p>@NormalizedBoolean(Model.IncludePackingSlipOnLabel)</p>
                </div>

                <div class="d-flex flex-column col-md-4">
                    <label class="form-label">@Html.DisplayNameFor(model => model.CompanyGUID)</label>
                    <p>@Model.CompanyGUID</p>
                </div>

                <div class="d-flex flex-column col-md-4">
                    <label class="form-label">@Html.DisplayNameFor(model => model.DefaultAllocationStrategy)</label>
                    <p>@Model.DefaultFulfillmentMethod</p>
                </div>

                <div class="d-flex flex-column col-md-4">
                    <label class="form-label">@Html.DisplayNameFor(model => model.DefaultFulfillmentStrategy)</label>
                    <p>@Model.DefaultFulfillmentStrategy</p>
                </div>

                <div class="d-flex flex-column col-md-4">
                    <label class="form-label">@Html.DisplayNameFor(model => model.DefaultAllocationStrategy)</label>
                    <p>@Model.DefaultAllocationStrategy</p>
                </div>

                <div class="d-flex flex-column col-md-4">
                    <label class="form-label">@Html.DisplayNameFor(model => model.CreatedOn)</label>
                    <p>@Model.CreatedOn</p>
                </div>

                <div class="d-flex flex-column col-md-4">
                    <label class="form-label">@Html.DisplayNameFor(model => model.CreatedBy)</label>
                    <p>@Model.CreatedBy</p>
                </div>
            </div>
        </div>
    </div>
</div>
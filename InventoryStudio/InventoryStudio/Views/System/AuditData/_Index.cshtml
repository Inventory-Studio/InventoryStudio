@model List<AuditData>

@{
    ViewData["Title"] = "System Log";
}


<div class="bg-gray-200 py-2 px-3 rounded mb-4">
    <h6 class="mb-0">System Log</h6>
</div>
<div class="container">
    <div class="row">
        <div class="col">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Created On</th>
                    <th>Type</th>
                    <th>Username</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CreatedOn.ToString("g")</td>
                                <td>@item.Type</td>
                                <td>@item.UserName</td> 
                                <td>
                                    <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#details_@item.AuditDataID">Details</button>
                                    <div id="details_@item.AuditDataID" class="collapse">
                                        <pre>@item.ChangedValue</pre>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('button[data-toggle="collapse"]').click(function () {
            var targetId = $(this).attr('data-target');
            $(targetId).collapse('toggle');
        });
    });
</script>
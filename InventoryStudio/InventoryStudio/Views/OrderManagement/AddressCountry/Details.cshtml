@model InventoryStudio.Models.OrderManagement.AddressCountry.AddressCountryViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid py-4">
    <div class="card custom-card">
        <div class="card-header hstack justify-content-between align-items-center">
            <div class="card-title">Address Country Details</div>
            <div class="hstack btn-list mt-md-0 mt-2">
                <a asp-controller="AddressCountry" asp-action="Edit" asp-route-id="@Model.CountryID" type="button" class="btn btn-sm btn-primary btn-wave hstack align-items-center" aria-label="Edit Address button">
                    <i class="bi-pencil-fill me-2 align-middle d-inline-block fs-16"></i>Edit Address Country
                </a>
                <a class="btn btn-sm btn-light" asp-controller="AddressCountry" asp-action="Index" aria-label="Back to List">Back to List</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="d-flex flex-column col-md-4">
                    <label class="form-label">@Html.DisplayNameFor(model => model.CountryName)</label>
                    <p>@Model.CountryName</p>
                </div>

                <div class="d-flex flex-column col-md-4">
                    <label class="form-label">@Html.DisplayNameFor(model => model.USPSCountryName)</label>
                    <p>@Model.USPSCountryName</p>
                </div>

                <div class="d-flex flex-column col-md-4">
                    <label class="form-label">@Html.DisplayNameFor(model => model.IsEligibleForPLTFedEX)</label>
                    <p>@Model.IsEligibleForPLTFedEX</p>
                </div>

                <div class="d-flex flex-column col-md-4">
                    <label class="form-label">@Html.DisplayNameFor(model => model.EelPfc)</label>
                    <p>@Model.EelPfc</p>
                </div>
            </div>
        </div>>
    </div>
</div>
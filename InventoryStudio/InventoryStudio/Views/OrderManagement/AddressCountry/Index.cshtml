@model IEnumerable<InventoryStudio.Models.OrderManagement.AddressCountry.AddressCountryViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CountryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.USPSCountryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEligibleForPLTFedEX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EelPfc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.USPSCountryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsEligibleForPLTFedEX)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EelPfc)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CountryID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CountryID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CountryID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

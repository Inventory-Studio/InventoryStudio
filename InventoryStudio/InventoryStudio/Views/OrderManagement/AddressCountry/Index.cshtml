@model IEnumerable<InventoryStudio.Models.OrderManagement.AddressCountry.AddressCountryViewModel>

@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid py-4 h-100">
    <div class="card custom-card h-100">
        <div class="card-header hstack justify-content-between align-items-center">
            <div class="card-title">Address Country Management</div>
            <div>
                <a asp-controller="AddressCountry" asp-action="Create" class="btn btn-sm btn-primary hstack align-items-center"><i class="bi-plus me-2 align-middle d-inline-block fs-16"></i>Create</a>
            </div>
        </div>
        <div class="card-body">
            <ejs-grid id="Grid" class="h-100" allowPaging="true" allowReordering="true" allowSorting="true" toolbarClick="toolbarClick" allowSelection="true" allowFiltering="true" enableStickyHeader="true" width="100%" height="100%"
                      allowExcelExport="true" allowPdfExport="true" toolbar="@(new List<string>() { "Delete", "PdfExport", "ExcelExport" })">

                <e-grid-editSettings showDeleteConfirmDialog="true" allowDeleting="true">
                </e-grid-editSettings>
                <e-grid-filterSettings type="Excel" mode="OnEnter"></e-grid-filterSettings>
                <e-data-manager url="/AddressCountry/UrlDatasource" adaptor="UrlAdaptor" insertUrl="/AddressCountry/Insert"
                                updateUrl="/AddressCountry/Update" removeUrl="/AddressCountry/Remove">
                </e-data-manager>
                @* <e-grid-pagesettings pageCount="5"></e-grid-pagesettings> *@
                <e-grid-columns>
                    <e-grid-column visible="false" field="CountryID" headerText="ID" type="int" isPrimaryKey="true"
                                   validationRules="@(new { number = true })" width="80">
                    </e-grid-column>
                    <e-grid-column field="CountryName" headerText="Country Name" width="120"></e-grid-column>
                    <e-grid-column field="USPSCountryName" headerText="USPS Country Name" width="120"></e-grid-column>
                    <e-grid-column field="IsEligibleForPLTFedEX" headerText="Eligible for PLT FedEx" width="120"></e-grid-column>
                    <e-grid-column field="EelPfc" headerText="Eel Pfc" width="120"></e-grid-column>
                    <e-grid-column headerText="Actions" template="#actions" width="100" maxWidth="100"></e-grid-column>
                </e-grid-columns>
            </ejs-grid>
        </div>
    </div>
</div>


<!-- Actions template -->
<script id="actions" type="text/x-template">
    <div class="hstack gap-2">
        <a href="/AddressCountry/Edit?id=${CountryID}" class="btn btn-icon btn-warning-light" data-bs-toggle="tooltip" title="Edit user" aria-label="Edit user button">
            <i class="bi-pencil-fill"></i>
        </a>
        <a href="/AddressCountry/Details?id=${CountryID}" class="btn btn-icon btn-info-light" data-bs-toggle="tooltip" title="View user" aria-label="View user button">
            <i class="bi-eye-fill"></i>
        </a>
    </div>
</script>


<script src="@Url.Content("~/js/utils/utils.js")"></script>

<!-- Javascript logic for datagrid -->
<script lang="js">
    const toolbarClick = customExportToolbarClick("Grid", "IS_Address_Countries");
</script>


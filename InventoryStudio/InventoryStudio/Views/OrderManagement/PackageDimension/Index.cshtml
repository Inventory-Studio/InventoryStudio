@model IEnumerable<InventoryStudio.Models.OrderManagement.PackageDimension.PackageDimensionViewModel>

@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid py-4 h-100">
    <div class="card custom-card h-100">
        <div class="card-header hstack align-items-center justify-content-between">
            <div class="card-title">
                Package Dimensions
            </div>
            <div class="hstack btn-list mt-md-0 mt-2">
                <a asp-controller="PackageDimension" asp-action="Create" type="button" class="btn btn-sm btn-primary btn-wave hstack align-items-center" aria-label="Create company button">
                    <i class="bi-plus me-2 align-middle d-inline-block fs-16"></i>Create
                </a>
            </div>
        </div>
        <div class="card-body">
            <ejs-grid id="Grid" class="h-100" allowPaging="true" allowReordering="true" allowSorting="true" toolbarClick="toolbarClick" allowSelection="true" allowFiltering="true" enableStickyHeader="true" width="100%" height="100%"
                      allowExcelExport="true" allowPdfExport="true" toolbar="@(new List<string>() { "Delete", "PdfExport", "ExcelExport" })">

                <e-grid-editSettings showDeleteConfirmDialog="true" allowDeleting="true">
                </e-grid-editSettings>
                <e-grid-filterSettings type="Excel" mode="OnEnter"></e-grid-filterSettings>
                <e-data-manager url="/PackageDimension/UrlDatasource" adaptor="UrlAdaptor" insertUrl="/PackageDimension/Insert"
                                updateUrl="/PackageDimension/Update" removeUrl="/PackageDimension/Remove">
                </e-data-manager>
                @* <e-grid-pagesettings pageCount="5"></e-grid-pagesettings> *@
                <e-grid-columns>
                    <e-grid-column visible="false" field="PackageDimensionID" headerText="ID" type="int" isPrimaryKey="true"
                                   validationRules="@(new { number = true })" width="80">
                    </e-grid-column>
                    <e-grid-column field="Name" headerText="Name" width="120"></e-grid-column>
                    <e-grid-column field="Length" headerText="Length" width="120"></e-grid-column>
                    <e-grid-column field="Width" headerText="Width" width="120"></e-grid-column>
                    <e-grid-column field="Height" headerText="Height" width="120"></e-grid-column>
                    <e-grid-column field="Weight" headerText="Weight" width="120"></e-grid-column>
                    <e-grid-column field="WeightUnit" headerText="Weight Unit" width="120"></e-grid-column>
                    <e-grid-column field="Cost" headerText="Cost" width="120"></e-grid-column>
                    <e-grid-column field="ShippingPackage" headerText="Shipping Package" width="120"></e-grid-column>
                    <e-grid-column field="Template" headerText="Template" width="120"></e-grid-column>
                    <e-grid-column field="Company" headerText="Company" width="120"></e-grid-column>
                    <e-grid-column headerText="Actions" template="#actions" width="100" maxWidth="100"></e-grid-column>
                </e-grid-columns>
            </ejs-grid>
        </div>
    </div>
</div>

<!-- Actions template -->
<script id="actions" type="text/x-template">
    <div class="hstack gap-2">
        <a href="/PackageDimension/Edit?id=${PackageDimensionID}" class="btn btn-icon btn-warning-light" data-bs-toggle="tooltip" title="Edit user" aria-label="Edit user button">
            <i class="bi-pencil-fill"></i>
        </a>
        <a href="/PackageDimension/Details?id=${PackageDimensionID}" class="btn btn-icon btn-info-light" data-bs-toggle="tooltip" title="View user" aria-label="View user button">
            <i class="bi-eye-fill"></i>
        </a>
    </div>
</script>

<script src="@Url.Content("~/js/utils/utils.js")"></script>

<!-- Javascript logic for datagrid -->
<script lang="js">
    const toolbarClick = customExportToolbarClick("Grid", "IS_PackageDimensions");
</script>
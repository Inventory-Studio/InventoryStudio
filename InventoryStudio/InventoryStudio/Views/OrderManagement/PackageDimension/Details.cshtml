@model InventoryStudio.Models.OrderManagement.PackageDimension.PackageDimensionViewModel

@{
    ViewData["Title"] = "Details";
}


<div class="container-fluid py-4">
    <div class="card custom-card">
        <div class="card-header hstack justify-content-between align-items-center">
            <div class="card-title">Package Dimension Details</div>
            <div class="hstack btn-list mt-md-0 mt-2">
                <a asp-controller="PackageDimension" asp-action="Edit" asp-route-id="@Model.PackageDimensionID" type="button" class="btn btn-sm btn-primary btn-wave hstack align-items-center" aria-label="Edit Address button">
                    <i class="bi-pencil-fill me-2 align-middle d-inline-block fs-16"></i>Edit Package Dimension
                </a>
                <a class="btn btn-sm btn-light" asp-controller="Customer" asp-action="Index" aria-label="Back to List">Back to List</a>
            </div>
        </div>
        <div class="card-body">
            <div class="d-flex flex-column col-md-4">
                <label class="form-label">@Html.DisplayNameFor(model => model.Company)</label>
                <p>@Model.Company</p>
            </div>
            <div class="d-flex flex-column col-md-4">
                <label class="form-label">@Html.DisplayNameFor(model => model.Name)</label>
                <p>@Model.Name</p>
            </div>
            <div class="d-flex flex-column col-md-4">
                <label class="form-label">@Html.DisplayNameFor(model => model.Length)</label>
                <p>@Model.Length</p>
            </div>
            <div class="d-flex flex-column col-md-4">
                <label class="form-label">@Html.DisplayNameFor(model => model.Width)</label>
                <p>@Model.Width</p>
            </div>
            <div class="d-flex flex-column col-md-4">
                <label class="form-label">@Html.DisplayNameFor(model => model.Height)</label>
                <p>@Model.Height</p>
            </div>
            <div class="d-flex flex-column col-md-4">
                <label class="form-label">@Html.DisplayNameFor(model => model.Weight)</label>
                <p>@Model.Weight</p>
            </div>
            <div class="d-flex flex-column col-md-4">
                <label class="form-label">@Html.DisplayNameFor(model => model.WeightUnit)</label>
                <p>@Model.WeightUnit</p>
            </div>
            <div class="d-flex flex-column col-md-4">
                <label class="form-label">@Html.DisplayNameFor(model => model.Cost)</label>
                <p>@Model.Cost</p>
            </div>
            <div class="d-flex flex-column col-md-4">
                <label class="form-label">@Html.DisplayNameFor(model => model.ShippingPackage)</label>
                <p>@Model.ShippingPackage</p>
            </div>
            <div class="d-flex flex-column col-md-4">
                <label class="form-label">@Html.DisplayNameFor(model => model.Template)</label>
                <p>@Model.Template</p>
            </div>
        </div>
    </div>
</div>


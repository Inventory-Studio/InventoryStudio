            <img src="@Url.Content("~/assets/images/brand-logos/toggle-logo.png")" alt="logo" class="toggle-logo">
            <img src="@Url.Content("~/assets/images/brand-logos/desktop-dark.png")" alt="logo" class="desktop-dark">
            <img src="@Url.Content("~/assets/images/brand-logos/toggle-dark.png")" alt="logo" class="toggle-dark">
            <img src="@Url.Content("~/assets/images/brand-logos/desktop-white.png")" alt="logo" class="desktop-white">

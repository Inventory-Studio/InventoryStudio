@model List<Item>

@{
    ViewData["Title"] = "Items";
}

<div class="container-fluid py-4 h-100">
    <div class="card custom-card h-100">
        <div class="card-header hstack align-items-center justify-content-between">
            <div class="card-title">
                Item Management
            </div>
            <div class="btn-list mt-md-0 mt-2">
                <a asp-controller="Item" asp-action="Create" type="button" class="btn btn-sm btn-primary btn-wave hstack align-items-center" aria-label="Create user button">
                    <i class="bi-plus me-2 align-middle d-inline-block fs-16"></i>Create Item
                </a>
            </div>
        </div>
        <div class="card-body">
            <ejs-grid id="Grid" class="h-100" allowPaging="true" allowReordering="true" allowSorting="true" toolbarClick="toolbarClick" allowSelection="true" allowFiltering="true" enableStickyHeader="true" width="100%" height="100%"
                      allowExcelExport="true" allowPdfExport="true" toolbar="@(new List<string>() { "Delete", "PdfExport", "ExcelExport" })">

                <e-grid-editSettings showDeleteConfirmDialog="true" allowDeleting="true">
                </e-grid-editSettings>
                <e-grid-filterSettings type="Excel" mode="OnEnter"></e-grid-filterSettings>
                <e-data-manager url="/Item/UrlDatasource" adaptor="UrlAdaptor" insertUrl="/Item/Insert"
                                updateUrl="/Item/Edit" removeUrl="/Item/Remove">
                </e-data-manager>
                @* <e-grid-pagesettings pageCount="5"></e-grid-pagesettings> *@
                <e-grid-columns>
                    <e-grid-column visible="false" field="ItemID" headerText="ID" type="int" isPrimaryKey="true"
                                   validationRules="@(new { number = true })" width="80">
                    </e-grid-column>
                    <e-grid-column field="ItemNumber" headerText="Item Number" width="120"></e-grid-column>
                    <e-grid-column field="ItemName" headerText="Name" width="120"></e-grid-column>
                    <e-grid-column field="ItemType" headerText="Item Type" width="120"></e-grid-column>
                    <e-grid-column field="UpdatedOn" headerText="Updated On" width="120"></e-grid-column>
                    <e-grid-column field="CreatedOn" headerText="Created On" width="120"></e-grid-column>
                    <e-grid-column headerText="Actions" template="#actions" width="100" maxWidth="100"></e-grid-column>
                </e-grid-columns>
            </ejs-grid>
        </div>
    </div>
</div>

<!-- Actions template -->
<script id="actions" type="text/x-template">
    <div class="hstack gap-2">
        <a href="/Item/Edit?id=${ItemID}" class="btn btn-icon btn-warning-light" data-bs-toggle="tooltip" title="Edit Item" aria-label="Edit Item button">
            <i class="bi-pencil-fill"></i>
        </a>
    </div>
</script>

<!-- Javascript logic for datagrid -->
<script lang="js">
        function toolbarClick(args) {
            var gridObj=document.getElementById("Grid").ej2_instances[0];
            if (args.item.id=== 'Grid_pdfexport') {
            var pdfdata=gridObj.getSelectedRecords();
            if (pdfdata?.length> 0) {
                var exportProperties = {
                    dataSource: pdfdata,
                    includeHiddenColumn: true
                };
                gridObj.pdfExport(exportProperties);
                } else {
                    gridObj.pdfExport();
                }
            }
            if (args.item.id === 'Grid_excelexport') {
                var exceldata = gridObj.getSelectedRecords();
                if (exceldata?.length > 0) {
                    var exportProperties = {
                        dataSource: exceldata,
                        includeHiddenColumn: true
                    };
                    gridObj.excelExport(exportProperties);
                } else {
                    gridObj.excelExport();
                }

            }
        }
</script>

@section Scripts {
    <script>
        function confirmDelete(roleName) {
            return confirm(`Are you sure you want to delete the role '${roleName}'?`);
        }
    </script>
}
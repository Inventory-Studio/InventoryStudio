@using System.Reflection
@model Item

@{
    ViewData["Title"] = "Create Item";

    var enumItemTypeSelectList = Enum.GetValues(typeof(Item.enumItemType))
                                     .Cast<Item.enumItemType>()
                                     .Select(e => new SelectListItem
                                             {
                                                 Value = e.ToString(),
                                                 Text = e.GetType()
                                                         .GetMember(e.ToString())
                                                         .FirstOrDefault()?
                                                         .GetCustomAttribute<System.ComponentModel.DescriptionAttribute>()?
                                                         .Description ?? e.ToString()
                                             })
                                     .ToList();
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="Create" method="post" id="createItemForm">
        <div class="card">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs" id="itemFormTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="item-details-tab" data-toggle="tab" href="#step1" role="tab" aria-controls="step1" aria-selected="true">Item Details</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="attributes-tab" data-toggle="tab" href="#step2" role="tab" aria-controls="step2" aria-selected="false">Item Barcode</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="matrix-tab" data-toggle="tab" href="#step3" role="tab" aria-controls="step3" aria-selected="false">Item Component</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content" id="itemFormTabContent">
                    <!-- Step 1 -->
                    <div class="tab-pane fade show active" id="step1" role="tabpanel" aria-labelledby="item-details-tab">
                        <!-- Step 1 content here... (from the form content previously provided) -->
                        <div class="row">
                        <div class="form-group col-md-6">
                            <label for="itemType">Item Type *</label>
                            <select asp-for="ItemType" asp-items="@enumItemTypeSelectList" class="form-control"></select>
                        </div>
                            <div class="form-group col-md-6">
                                <label asp-for="ItemNumber">Item Number</label>
                                <input asp-for="ItemNumber"  class="form-control"/>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-6">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox"  id="createMatrixCheckbox" onchange="toggleMatrix()">
                                    <label class="form-check-label" for="createMatrix">
                                        Create Matrix
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="receiveIndividually">
                                    <label class="form-check-label" for="receiveIndividually">
                                        Receive Individually
                                    </label>
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="ItemName">Item Name</label>
                                <input asp-for="ItemName" class="form-control" />
                            </div>
                        </div>

                     <hr>
                        <div class="row">
                            <div class="form-group col-md-6">
                            <label for="hsCode">HS Code</label>
                            <input type="text" class="form-control" id="hsCode">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="goodDescription">Good Description</label>
                            <input type="text" class="form-control" id="goodDescription">
                        </div>
                        </div>
                        <div class="form-group">
                            <label for="countryOfOrigin">Country of Origin</label>
                            <input type="text" class="form-control" id="countryOfOrigin">
                        </div>

                        <hr>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="hsCode">Package Length</label>
                                <input type="text" class="form-control" id="hsCode">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="goodDescription">Package Width</label>
                                <input type="text" class="form-control" id="goodDescription">
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="hsCode">Package Height</label>
                                <input type="text" class="form-control" id="hsCode">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="goodDescription">Package Dimension Unit of Measure</label>
                                <input type="text" class="form-control" id="goodDescription">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="countryOfOrigin">Package Weight</label>
                            <input type="text" class="form-control" id="countryOfOrigin">
                        </div>

                        <hr>

                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="hsCode">Sales Description</label>
                                <input type="text" class="form-control" id="hsCode">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="goodDescription">Purchase Description</label>
                                <input type="text" class="form-control" id="goodDescription">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="countryOfOrigin">Shipping Memo</label>
                            <input type="text" class="form-control" id="countryOfOrigin">
                        </div>

                    </div>
                    <!-- Step 2 -->
                    <div class="tab-pane fade" id="step2" role="tabpanel" aria-labelledby="attributes-tab">
                        <div class="row">
                            <div class="col-12">
                                <h2>Item Barcode(s)</h2>
                                <button type="button" id="addBarCodes" class="btn btn-primary mb-2">Add</button>
                                <table class="table" id="barcodeTable">
                                    <thead>
                                        <tr>
                                            <th>Barcode</th>
                                            <th>Type</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- Rows will be added here -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- Step 3 -->
                    <div class="tab-pane fade" id="step3" role="tabpanel" aria-labelledby="matrix-tab">
                        <div class="row">
                            <div class="col-12">
                                <h2>Item Component(s)</h2>
                                <button type="button" id="addItemComponent" class="btn btn-primary mb-2">Add</button>
                                <table class="table" id="itemComponentsTable">
                                    <thead>
                                        <tr>
                                            <th>Item</th>
                                            <th>Quantity</th>
                                            <th>Unit of Measure</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- Dynamic rows will be added here -->
                                    </tbody>
                                </table>
                                <button class="btn btn-secondary">Back</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Navigation Buttons -->
        <div class="form-group mt-3">
            <button type="button" class="btn btn-secondary" onclick="goToPreviousStep()">Previous</button>
            <button type="button" class="btn btn-primary" onclick="goToNextStep()">Next</button>
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </form>
</div>


<div class="hide">
    <div id="inventoryItemForm">
        <div class="tab-pane fade" id="step2" role="tabpanel" aria-labelledby="attributes-tab">
            <div class="row">
                <div class="col-12">
                    <h2>Item Barcode(s)</h2>
                    <button type="button" id="addRow" class="btn btn-primary mb-2">Add</button>
                    <table class="table" id="barcodeTable">
                        <thead>
                            <tr>
                                <th>Barcode</th>
                                <th>Type</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Rows will be added here -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
     
        <div class="tab-pane fade" id="step3" role="tabpanel" aria-labelledby="matrix-tab">
            <div class="row">
                <div class="col-12">
                    <h2>Item Component(s)</h2>
                    <button type="button" id="addItemComponent" class="btn btn-primary mb-2">Add</button>
                    <table class="table" id="itemComponentsTable">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Quantity</th>
                                <th>Unit of Measure</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Dynamic rows will be added here -->
                        </tbody>
                    </table>
                    <button class="btn btn-secondary">Back</button>
                </div>
            </div>
        </div>
    </div>

</div>


<script>

        function goToNextStep() {
            var currentTab = $('#itemFormTab .nav-link.active');
            var nextTab = currentTab.parent().next().find('.nav-link');
            if (nextTab.length !== 0) {
                nextTab.tab('show');
            }
        }

        function goToPreviousStep() {
            var currentTab = $('#itemFormTab .nav-link.active');
            var prevTab = currentTab.parent().prev().find('.nav-link');
            if (prevTab.length !== 0) {
                prevTab.tab('show');
            }
        }

        function toggleMatrix() {
            var isChecked = $('#createMatrixCheckbox').is(':checked');
            if (isChecked) {
                $('#matrixFormContainer').load('/Item/MatrixForm'); // Use the correct URL to your action
            } else {
                $('#matrixFormContainer').empty();
            }
        }


    $(document).ready(function () {
        $('#addBarCodes').click(function () {
            var $tableBody = $('#barcodeTable').find('tbody');
            var $newRow = $('<tr/>');
            $newRow.append($('<td/>').html('<input type="text" class="form-control" placeholder="Barcode">'));
            $newRow.append($('<td/>').html('<input type="text" class="form-control" placeholder="Type">'));
            var $actionsCell = $('<td/>');
            $actionsCell.append($('<button/>').addClass('btn btn-success btn-sm saveBtn').text('√'));
            $actionsCell.append($('<button/>').addClass('btn btn-danger btn-sm deleteBtn').text('x'));
            $newRow.append($actionsCell);
            $tableBody.append($newRow);
        });

        $(document).on('click', '.saveBtn', function () {
            var $row = $(this).closest('tr');
            var barcodeVal = $row.find('input').eq(0).val();
            var typeVal = $row.find('input').eq(1).val();
            $row.find('td').eq(0).text(barcodeVal);
            $row.find('td').eq(1).text(typeVal);
            var $actionsCell = $row.find('td').eq(2);
            $actionsCell.html('');
            $actionsCell.append($('<button/>').addClass('btn btn-info btn-sm editBtn').text('Edit'));
            $actionsCell.append($('<button/>').addClass('btn btn-danger btn-sm deleteBtn').text('Delete'));
        });

        $(document).on('click', '.deleteBtn', function () {
            $(this).closest('tr').remove();
        });

        // Implement the edit button functionality if needed
        // $(document).on('click', '.editBtn', function() {
        //     // Your edit code here
        // });



        //ItemComponet
        var productOptions = [
            "Tshirt-Style-A_Small_Black - Tshirt-123",
            "Tshirt-Style-A_Medium_Black - Tshirt-Style-A",
            // ... Add all product names here
        ];

        $('#addItemComponent').click(function () {
            var newRow = $('<tr>');
            newRow.append($('<td>').append($('<select>').addClass('form-control item-select').append(productOptions.map(function (option) {
                return $('<option>').text(option);
            }))));
            newRow.append($('<td>').append($('<input>').attr('type', 'number').addClass('form-control').val(1)));
            newRow.append($('<td>').append($('<input>').attr('type', 'text').addClass('form-control')));
            var actions = $('<td>').append($('<button>').addClass('btn btn-success btn-sm confirmBtn').html('&#10003;'));
            actions.append($('<button>').addClass('btn btn-danger btn-sm deleteBtn').html('&times;'));
            newRow.append(actions);
            $('#itemComponentsTable tbody').append(newRow);
        });

        $(document).on('click', '.confirmBtn', function () {
            $(this).closest('tr').find('select, input').each(function () {
                var value = $(this).val();
                $(this).parent().text(value);
            });
            $(this).siblings('.deleteBtn').remove();
            $(this).remove();
        });

        $(document).on('click', '.deleteBtn', function () {
            $(this).closest('tr').remove();
        });
    });
    
</script>

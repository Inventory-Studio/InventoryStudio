                            <select asp-for="ItemType" asp-items="@enumItemTypeSelectList" class="form-control"></select>
                        </div>
                            <div class="form-group col-md-6">
                                <label asp-for="ItemNumber">Item Number</label>
                                <input asp-for="ItemNumber" class="form-control" onchange="addItemBarcode()" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-6">
                                <div class="form-check">
                                    <input asp-for="IsVariation" type="checkbox" class="form-check-input" id="createMatrixCheckbox" onchange="toggleMatrix()" />                 
                                    <label class="form-check-label" for="createMatrix">
                                        Create Matrix
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input asp-for="IsShipReceiveIndividually" type="checkbox" class="form-check-input" />
                                    <label class="form-check-label" for="receiveIndividually">
                                        Receive Individually
                                    </label>
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="ItemName">Item Name</label>
                                <input asp-for="ItemName" class="form-control" />
                            </div>
                        </div>

                     <hr>
                        <div class="row">
                            <div class="form-group col-md-6">

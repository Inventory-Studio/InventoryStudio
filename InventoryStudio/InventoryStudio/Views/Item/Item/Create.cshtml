                        <hr>

                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="SalesDescription">Sales Description</label>
                                <input asp-for="SalesDescription" class="form-control" />
                            </div>
                            <div class="form-group col-md-6">
                                <label for="PurchaseDescription">Purchase Description</label>
                                <input asp-for="PurchaseDescription" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="Memo">Shipping Memo</label>
                            <input asp-for="Memo" class="form-control" />
                        </div>

                    </div>
                    <!-- Step 2 -->
                    <div class="tab-pane fade" id="barcode-content" role="tabpanel" aria-labelledby="barcode-tab">
                        <div class="row">
                            <div class="col-12">
                                <h2>Item Barcode(s)</h2>
                                <button type="button" id="addBarCodes" class="btn btn-primary mb-2">Add</button>
                                <table class="table" id="barcodeTable">
                                    <thead>
                                        <tr>
                                            <th>Barcode</th>
                                            <th>Type</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            foreach (var itemBarcode in Model.ItemBarcodes ?? Enumerable.Empty<ItemBarcode>())
                                        {
                                           
                                        }   
                                        }                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- Step 3 -->
                    <div class="tab-pane fade" id="component-content" role="tabpanel" aria-labelledby="component-tab">
                        <div class="row">
                            <div class="col-12">
                                <h2>Item Component(s)</h2>
                                <button type="button" id="addItemComponent" class="btn btn-primary mb-2">Add</button>
                                <table class="table" id="itemComponentsTable">
                                    <thead>
                                        <tr>
                                            <th>Item</th>
                                            <th>Quantity</th>
                                            <th>Unit of Measure</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>                                        
                                         @if (Model != null)
                                        {
                                            foreach (var ItemComponent in Model.ItemComponents ?? Enumerable.Empty<ItemComponent>())
                                            {

                                            }
                                        }
                                    </tbody>
                                </table>
                                <button class="btn btn-secondary">Back</button>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="kit-item-tab" role="tabpanel" aria-labelledby="kit-item-tab">
                        <div class="row">
                            <div class="col-12">
                                <h2>Kit Items</h2>
                                <button type="button" id="addItemComponent" class="btn btn-primary mb-2">Add</button>
                                <table class="table" id="itemComponentsTable">
                                    <thead>
                                        <tr>
                                            <th>Item</th>
                                            <th>Quantity</th>
                                            <th>Unit of Measure</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                         @if (Model != null)
                                        {
                                            foreach (var ItemKit in Model.ItemKits ?? Enumerable.Empty<ItemKit>())
                                            {

                                            }
